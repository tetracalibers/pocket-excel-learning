---
import { NAV } from "@/site-config"

const routes = Astro.url.pathname.split("/").filter(Boolean)
const [category] = routes

const current = NAV.find((item) => item.href === `/${category}`)
const prevItems = [NAV[0], current]
---

<nav>
  <ul class="flex gap-2 text-sm items-center opacity-80">
    {
      prevItems.map((item, i) => (
        <li class="contents">
          <a href={item.href} class="no-underline">
            {item.title}
          </a>
          {i < prevItems.length - 1 && (
            <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="7.5 3.5 9 17">
              <path
                fill="none"
                stroke="currentColor"
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M16 4L8 20"
              />
            </svg>
          )}
        </li>
      ))
    }
  </ul>
</nav>
