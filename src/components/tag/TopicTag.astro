---
import { SITE_BASE } from "@/site-config"
import { getEntry } from "astro:content"

interface Props {
  slug: string
}

const { slug } = Astro.props

const entry = await getEntry("topic", slug)
const { color } = entry.data.category
---

<a class="inline-flex break-all tag" href={`${SITE_BASE}/topic/${slug}`}>{entry.data.title}</a>

<style define:vars={{ "category-color": color }}>
  .tag {
    border-radius: 3px;
    padding-left: 6px;
    padding-right: 6px;
    font-size: 14px;
    line-height: 1.2;
    background: var(--category-color);
    margin: 0;
    text-decoration: none;
  }
</style>
